
<view class="my-box">
<view class="box-first">
<input type="text" placeholder="姓名" class="input-css" model:value="{{name}}"/>
</view>
<view class="box-first">
<input type="tel" placeholder="手机号码" class="input-css" model:value="{{phone}}"/>
</view>
<button bindtap="tophone" class="class_tophone">添加联系人</button>

</view>

<view wx:for="{{list}}" wx:for-item="item">
  <text>姓名：{{item.name}}</text>
  <text>电话：{{item.phone}}</text>
  <button bindtap="dele" data-item="{{item}}">删除</button>
  <button bindtap="updata" data-item="{{item}}" >修改</button>
</view>